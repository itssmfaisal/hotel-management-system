<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hotelmanagementmine.controller.LoginController"
            prefHeight="500.0" prefWidth="400.0"
            stylesheets="@style.css">

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="content-pane">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Hotel Management System" styleClass="title" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <VBox spacing="15" prefWidth="300">
                <Label text="Username:" />
                <TextField fx:id="usernameField" promptText="Enter username" prefHeight="35"/>

                <Label text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Enter password" prefHeight="35"/>

                <Label fx:id="errorLabel" textFill="red" visible="false" />

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Login" onAction="#handleLogin" styleClass="btn-primary" prefWidth="140" prefHeight="35"/>
                    <Button text="Register" onAction="#handleRegister" styleClass="btn-secondary" prefWidth="140" prefHeight="35"/>
                </HBox>
            </VBox>

            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
                <Label text="Default Credentials:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <Label text="Admin - Username: admin, Password: admin123" style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;"/>
                <Label text="Customer - Username: customer, Password: customer123" style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
